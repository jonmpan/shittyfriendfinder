<div class="container margin-top-to-push-down">

<div class="card">
    <form>
    <div class="card-content black-text">
        <div class="input-field">
            <input type="text" id="name" data-length="50">
            <label class="active black-text" for="name">Name</label>
        </div>
        <div class="input-field">
            <input type="email" id="email" class="validate" data-length="50">
            <label class="active black-text" for="name">Email</label>
        </div>
        <div class="input-field">
            <input type="url" id="imageURL" data-length="200">
            <label class="active black-text" for="name">Avatar Image URL</label>
        </div>    
        <div class="input-field">
            <textarea type="text" id="description" class="materialize-textarea" data-length="1000"></textarea>
            <label class="active black-text" for="description">Tell us about yourself!</label>
        </div>

{{#each questions}}
<div id="{{q}}div">
  <h5>{{ques}}</h5>
  <p>
    <input name="{{q}}" type="radio" id="{{q}}-1" value="5"/>
    <label class="black-text" style="font-weight:400" for="{{q}}-1">Strongly Agree</label>
  </p>
  <p>
    <input name="{{q}}" type="radio" id="{{q}}-2" value="4"/>
    <label class="black-text" style="font-weight:400" for="{{q}}-2">Agree</label>
  </p>
  <p>
    <input name="{{q}}" type="radio" id="{{q}}-3" value="3"/>
    <label class="black-text" style="font-weight:400" for="{{q}}-3">Neutral</label>
  </p>
  <p>
    <input name="{{q}}" type="radio" id="{{q}}-4" value="2"/>
    <label class="black-text" style="font-weight:400" for="{{q}}-4">Disagree</label>
  </p>
  <p>
    <input name="{{q}}" type="radio" id="{{q}}-5" value="1"/>
    <label class="black-text" style="font-weight:400" for="{{q}}-5">Strongly Disagree</label>      
  </p>
</div>
{{/each}}

</form>
<div class="card-action">
    <button class="waves-effect btn blue" id="go">Submit</button>
</div>

</div>

